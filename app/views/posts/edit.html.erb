<div  class="center-align" style="font-size: 20px;width:50%; margin:auto">
<%= form_for @post do |form| %>
  <%= form.label :message %>
  <%= form.hidden_field :user_id, :value => @post.user_id %>
  <%= form.text_area :message %>
  <div class="btn waves-effect #fafafa grey lighten-5"><%= form.submit "Submit" %></div>
<% end %>
</div>
